<section id="professionals" class=" bg-feature">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-sm-12 m-auto">
          <div class="section-heading text-white">
            <h4 class="section-title">Full stack digital marketing solution</h4>
            <p>We’re full service which means we’ve got you covered on design & content right through to digital. You’ll
              form a lasting relationship with us.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <section id="service">
    <div class="container">
      <div class="row">
        <% for(let i=0 ; i<professionalList.length ; i++){ %>
          <div class="col-lg-4 col-sm-6 col-md-6">
            <div class="service-box card">
              <div class="service-img-icon">
                <img src="images/professionals/default5.png" alt="service-icon" class="img-fluid">
              </div>
              <div class="service-inner card-body">
                <h4><%= professionalList[i].yourname %></h4>
                <p class="card-text"><%= professionalList[i].details %></p>
                <p class="card-text"><%= professionalList[i].phoneNumber %></p>
                <% if(isAuthenticated === false){ %>
                  <form action="/follow" method="post">
                    <input type="hidden" name="userId" value=""></input>
                    <input type="hidden" name="userType" value="<%=userType%>"></input>
                    <button class="btn btn-white btn-circled w-100 py-2 my-3" type="submit" name="professionalId" value=<%= professionalList[i]._id %>>Follow</button>
                  </form>
                <% } else{ %>
                  <% if(userType === "client"){ %>
                    <% let flag = 1; %>
                    <% for(let j=0 ; j<user.following.length ; j++){ %>
                      <% if(user.following[j] === professionalList[i]._id.toString()){ %>
                        <% flag=0; %>
                        <% break; %>
                      <% } %>
                    <% } %>
                    <% if(flag){ %>
                      <form action="/follow" method="post">
                        <input type="hidden" name="userId" value="<%=user._id%>"></input>
                        <input type="hidden" name="userType" value="<%=userType%>"></input>
                        <button class="btn btn-white btn-circled w-100 py-2 my-3" type="submit" name="professionalId" value=<%= professionalList[i]._id %>>Follow</button>
                      </form>
                    <% } else{ %>
                      <button class="btn btn-white btn-circled w-100 py-2 my-3">Following</button>
                    <% } %>
                  <% } %>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </section>